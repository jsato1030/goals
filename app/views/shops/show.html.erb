    <div id="page-wrapper">


      <!-- Banner -->
        <section id="banner">

          <div class="inner">

            <p><%= image_tag(@shop.image(:medium)) %></p>
            <p><%= @shop.name %></p>
            <footer>
              <ul class="buttons vertical">
                <li>
                  <% if @shop.reviews.present? %>
                    評価：<%= @shop.reviews.average(:rate).round %>/10
                  <% else %>
                    評価：なし
                  <% end %>
                </li>
                <li>
                  口コミ：<%= @shop.reviews.count %>件️
                </li>
                <li>
                  L字テーブル：<%= @shop.l %>️
                </li>
                <li>ジャンル：<%= @shop.genre %></li>
                <li>TEL：<%= @shop.tel %></li>
                <li>
                  住所：<%= @shop.address %>
                  <input type="button" value="地図を表示" onclick="startGmap()">
                  </li>
                <li>交通手段：<%= @shop.transportation %></li>
                <li>営業時間：<%= @shop.bussiness_hours %></li>
                <li>定休日：<%= @shop.regslar_holiday %></li>
                <li>カード：<%= @shop.card %></li>
                <li>サービス料・チャージ料：<%= @shop.service_charge %></li>
                <li>
                  <div id="map" style="width: 500px; height: 300px"></div>
                </li>
              </ul>
              <p><font color="yellow">口コミ一覧(<%= @shop.reviews.count %>件)</font></p>
              <ul>
                <% @shop.reviews.each do |review|%>
                <li>
                  <%= review.user.nickname %>：<br>
                  <%= review.review %>
                </li>
                <% end %>
              </ul>

            </footer>
          </div>

        </section>




      <!-- Footer -->
        <footer id="footer">

          <ul class="copyright">
            <li>&copy; Untitled</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
          </ul>

        </footer>

    </div>

<script>
function startGmap() {
  var myLatlng = new google.maps.LatLng(<%= @shop.latitude %>, <%= @shop.longitude %>),// 皇居
    mapElement = document.getElementById("map"),
    mapOptions = {
      zoom: 15,
      center: myLatlng
    },
    map = new google.maps.Map(mapElement, mapOptions);

    //マーカー
    marker = new google.maps.Marker({
      position: myLatlng,
      map: map
    });
}
</script>


