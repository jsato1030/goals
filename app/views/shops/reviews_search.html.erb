    <div id="page-wrapper">


      <!-- Banner -->
        <section id="banner">

          <!-- Two -->
            <section class="wrapper style1 container special">
              <h3>口コミするお店を選んでください<h3>

              <div class="row">
                <% @shops.each do |shop| %>
                <div class="4u 12u(narrower)">
                  <section>
                    <span class="icon featured fa-check"></span>
                    <header>
                      <h3><%= shop.name %></h3>
                    </header>
                    <p>
                      <ul>
                      <li>
                        <% if shop.reviews.present? %>
                          評価：<%= shop.reviews.average(:rate).round %>/10
                        <% else %>
                          評価：なし
                        <% end %>
                      </li>
                      <li>
                          <a href="/shops/<%= shop.id %>">口コミ：<%= shop.reviews.count %>件</a>️
                      </li>
                      <li>
                        <ul class="buttons vertical">
                         <%= form_tag("/shops/#{ shop.id }/reviews/new", method: :get) do %>
                            <li><input type="submit" value="口コミする"></li>
                          <% end %>
                      </li>
                      </ul>
                    </p>
                  </section>
                </div>
              <% end %>


              </div>
            </section>



          </div>

        </section>




      <!-- Footer -->
        <footer id="footer">

          <ul class="copyright">
            <li>&copy; Untitled</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
          </ul>

        </footer>

    </div>


